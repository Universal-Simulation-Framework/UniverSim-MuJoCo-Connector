<mujoco>
    <option timestep="0.005" integrator="RK4" gravity="0 0 -9.81">
        <flag sensornoise="disable" energy="enable" contact="enable" />
    </option>

    <asset>
        <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1=".1 .2 .3"
            rgb2=".2 .3 .4" />
        <material name="grid" texture="grid" texrepeat="1 1" texuniform="true" reflectance=".2" />
    </asset>

    <worldbody>
        <geom name="floor" size="0 0 .05" type="plane" material="grid" />
        <light diffuse=".5 .5 .5" pos="0 0 5" dir="0 0 -1" />
    </worldbody>

    <worldbody>
        <body name="sphere" pos="1 0 2">
            <joint name="sphere_joint" type="ball" pos="-1 0 0" damping="0.5" />
            <geom type="sphere" size=".1 .1 .1" rgba="0 .9 0 1" mass="1" />
        </body>
        <body name="cube" pos="-0.5 0.866 2">
            <joint name="cube_joint" type="ball" pos="0.5 -0.866 0" damping="0.5" />
            <geom type="box" size=".1 .1 .1" rgba="0 .9 0 1" mass="1" />
        </body>
        <body name="cylinder" pos="-0.5 -0.866 2">
            <joint name="cylinder_joint" type="ball" pos="0.5 0.866 0" damping="0.5" />
            <geom type="cylinder" size=".1 .1 .1" rgba="0 .9 0 1" mass="1" />
        </body>
        <!-- <body name="slider" pos="0 3 1" >
            <joint type="slide" pos="0 0 0" damping="0.5" axis="0 1 0"/>
            <geom type="box" size=".05 .5 .05" rgba="0 .9 0 1" mass="10" />
        </body> -->
    </worldbody>
</mujoco>